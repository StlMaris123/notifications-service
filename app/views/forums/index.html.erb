<p id="notice"><%= notice %></p>

<h1>Forums</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums&.each do |forum| %>
      <tr>
        <td><%= forum&.user&.nick_name %></td>
        <td><%= forum&.title %></td>
        <td><%= forum&.body %></td>
        <% forum&.tag_list&.each do |t| %>
           <td><%= link_to t, tagged_path(tag: t) %></td>
        <% end %>
        <td><%= link_to 'Show', forum %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Forum', new_forum_path %>
